<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MateriSaintek"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/materisaintek">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">


    <TextView
        android:id="@+id/tvjudulmapelsaintek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILIH MATA PELAJARAN"
        android:fontFamily="@font/boogaloo_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/bindo"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/bindo"
        app:layout_constraintTop_toBottomOf="@+id/tvjudulmapelsaintek"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickBindo"/>

    <ImageView
        android:id="@+id/binggris"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/bingg"
        app:layout_constraintTop_toBottomOf="@+id/bindo"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickBinggris"/>

    <ImageView
        android:id="@+id/matdas"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/matdas"
        app:layout_constraintTop_toBottomOf="@+id/binggris"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickMatdas"/>

    <ImageView
        android:id="@+id/kimia"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/kimia"
        app:layout_constraintTop_toBottomOf="@+id/matdas"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickKimia"/>

    <ImageView
        android:id="@+id/fisika"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/fisika"
        app:layout_constraintTop_toBottomOf="@+id/kimia"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickFisika"/>

    <ImageView
        android:id="@+id/biologi"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/biologi"
        app:layout_constraintTop_toBottomOf="@+id/fisika"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickBiologi"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>