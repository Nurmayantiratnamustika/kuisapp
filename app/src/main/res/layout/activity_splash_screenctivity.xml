<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SplashScreenctivity">

    <ImageView
        android:layout_width="281dp"
        android:layout_height="389dp"
        android:background="@drawable/illustration"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="85dp"
        android:id="@+id/gambarilus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="250dp" />

    <ImageView
        android:id="@+id/textcpns"
        android:layout_width="366dp"
        android:layout_height="74dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ebooks"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gambarilus" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/word"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textcpns" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@id/textcpns"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:textColor="#FFFF"
         android:textSize="20sp"
         android:text="Skip"/>

</androidx.constraintlayout.widget.ConstraintLayout>