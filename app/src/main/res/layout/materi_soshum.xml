<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/materisoshum"
    tools:context=".MateriSoshum"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tvjudulmapelsoshum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILIH MATA PELAJARAN"
        android:fontFamily="@font/boogaloo_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/bindo2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/bindo"
        app:layout_constraintTop_toBottomOf="@+id/tvjudulmapelsoshum"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickBindoSos"/>

    <ImageView
        android:id="@+id/binggris2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/bingg"
        app:layout_constraintTop_toBottomOf="@+id/bindo2"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickBinggSos"/>

    <ImageView
        android:id="@+id/matdas2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/matdas"
        app:layout_constraintTop_toBottomOf="@+id/binggris2"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickMatdasSos"/>

    <ImageView
        android:id="@+id/ekonomi"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/ekonomi"
        app:layout_constraintTop_toBottomOf="@+id/matdas2"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickEkoSos"/>

    <ImageView
        android:id="@+id/sejarah"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/sejarah"
        app:layout_constraintTop_toBottomOf="@+id/ekonomi"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickSejarahSos"/>

    <ImageView
        android:id="@+id/sosiologi"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/sosiologi"
        app:layout_constraintTop_toBottomOf="@+id/sejarah"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickSosiologiSos"/>

    <ImageView
        android:id="@+id/geografi"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/geografi"
        app:layout_constraintTop_toBottomOf="@+id/sosiologi"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onClickGeografiSos"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>